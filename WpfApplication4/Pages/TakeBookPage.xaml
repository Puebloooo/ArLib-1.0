<Page x:Class="ArLib.Pages.TakeBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArLib.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ArLib 1.0" Height="600" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/WpfApplication4;component/Additional/background.png"/>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="54" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="505" FontSize="36" FontFamily="DejaVu Serif" TextAlignment="Center" TextDecorations="{x:Null}" Foreground="White"><Run Text="ArLib 1.0 - "/><Run FontSize="25" Text="Wybierz czytelnika..."/><LineBreak/><LineBreak/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="search_textBox" HorizontalAlignment="Left" Height="54" Margin="61,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="561" FontFamily="DejaVu Serif Condensed" FontSize="20"/>
        <Button x:Name="search_button" Content="Wyszukaj..." HorizontalAlignment="Left" Height="54" Margin="627,142,0,0" VerticalAlignment="Top" Width="116" Click="SearchButton_Click" IsDefault="True"/>
        <DataGrid x:Name="results_readers" HorizontalAlignment="Left" Margin="61,224,0,0" VerticalAlignment="Top" Height="128" Width="561"/>
        <Button x:Name="back_button" Content="Powrót" HorizontalAlignment="Left" Margin="61,399,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="-1.747,0.25" Height="44" Click="back_button_Click"/>
        <Button x:Name="transaction_button" Content="Wypożycz" HorizontalAlignment="Left" Margin="627,308,0,0" VerticalAlignment="Top" Width="116" Height="44" Click="transaction_button_Click"/>
        <Label x:Name="tmp_label" HorizontalAlignment="Left" Height="152" Margin="204,399,0,0" VerticalAlignment="Top" Width="418" Foreground="White" FontFamily="DejaVu Serif Condensed" FontSize="20px"/>
        <Label x:Name="label" Content="Wybierz czytelnika, który wypożycza książkę:" HorizontalAlignment="Left" Margin="61,79,0,0" VerticalAlignment="Top" Width="682" Foreground="White" FontFamily="DejaVu Serif Condensed" FontSize="20"/>
    </Grid>
</Page>