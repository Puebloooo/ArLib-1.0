        <TextBox x:Name="quicksearch_tb" HorizontalAlignment="Right" Height="36" Margin="0,140,176,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="582" FontFamily="DejaVu Serif Condensed" FontSize="20"/>
