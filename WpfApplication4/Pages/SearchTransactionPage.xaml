        <DataGrid x:Name="results_books" HorizontalAlignment="Left" Margin="61,164,0,0" VerticalAlignment="Top" Height="128" Width="561"/>
        <DataGrid x:Name="results_readers" HorizontalAlignment="Left" Margin="61,345,0,0" VerticalAlignment="Top" Height="128" Width="561"/>
        <Button x:Name="back_button" Content="Powrót" HorizontalAlignment="Left" Margin="61,507,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="-1.747,0.25" Height="44" Click="back_button_Click"/>
